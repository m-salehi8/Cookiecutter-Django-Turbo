# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
DJANGO_SETTINGS_MODULE=core.settings.local

# Database Configuration
{% if cookiecutter.database == "postgres" %}
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME={{ cookiecutter.db_name }}
DATABASE_USER={{ cookiecutter.db_user }}
DATABASE_PASSWORD={{ cookiecutter.db_password }}
# For local development
DATABASE_HOST=localhost
DATABASE_PORT=5432
# For Docker development (uncomment when using Docker)
# DATABASE_HOST=db
{% elif cookiecutter.database == "mysql" %}
DATABASE_ENGINE=django.db.backends.mysql
DATABASE_NAME={{ cookiecutter.db_name }}
DATABASE_USER={{ cookiecutter.db_user }}
DATABASE_PASSWORD={{ cookiecutter.db_password }}
# For local development
DATABASE_HOST=localhost
DATABASE_PORT=3306
# For Docker development (uncomment when using Docker)
# DATABASE_HOST=db
{% else %}
# SQLite (no additional configuration needed)
{% endif %}

# Cache Configuration
{% if cookiecutter.use_cache == "y" %}
# For local development
REDIS_URL=redis://127.0.0.1:6379/1
# For Docker development (uncomment when using Docker)
# REDIS_URL=redis://redis:6379/1
{% endif %}

# Celery Configuration
{% if cookiecutter.use_celery == "y" %}
{% if cookiecutter.celery_broker == "redis" %}
# For local development
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0
# For Docker development (uncomment when using Docker)
# CELERY_BROKER_URL=redis://redis:6379/0
# CELERY_RESULT_BACKEND=redis://redis:6379/0
{% else %}
# For local development
CELERY_BROKER_URL=amqp://guest@localhost//
CELERY_RESULT_BACKEND=rpc://
# For Docker development (uncomment when using Docker)
# CELERY_BROKER_URL=amqp://guest@rabbitmq//
# CELERY_RESULT_BACKEND=rpc://
{% endif %}
{% endif %}

# Email Configuration (Optional)
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Security Settings
# SECURE_SSL_REDIRECT=False
# SECURE_BROWSER_XSS_FILTER=True
# SECURE_CONTENT_TYPE_NOSNIFF=True
# X_FRAME_OPTIONS=DENY

# Static Files
STATIC_URL=/static/
MEDIA_URL=/media/
