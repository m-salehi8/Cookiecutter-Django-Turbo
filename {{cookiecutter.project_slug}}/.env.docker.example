# Django Settings for Docker
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,web
DJANGO_SETTINGS_MODULE=core.settings.local

# Database Configuration for Docker
{% if cookiecutter.database == "postgres" %}
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME={{ cookiecutter.db_name }}
DATABASE_USER={{ cookiecutter.db_user }}
DATABASE_PASSWORD={{ cookiecutter.db_password }}
DATABASE_HOST=db
DATABASE_PORT=5432
{% elif cookiecutter.database == "mysql" %}
DATABASE_ENGINE=django.db.backends.mysql
DATABASE_NAME={{ cookiecutter.db_name }}
DATABASE_USER={{ cookiecutter.db_user }}
DATABASE_PASSWORD={{ cookiecutter.db_password }}
DATABASE_HOST=db
DATABASE_PORT=3306
{% else %}
# SQLite (no additional configuration needed)
{% endif %}

# Cache Configuration for Docker
{% if cookiecutter.use_cache == "y" %}
REDIS_URL=redis://redis:6379/1
{% endif %}

# Celery Configuration for Docker
{% if cookiecutter.use_celery == "y" %}
{% if cookiecutter.celery_broker == "redis" %}
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
{% else %}
CELERY_BROKER_URL=amqp://guest@rabbitmq//
CELERY_RESULT_BACKEND=rpc://
{% endif %}
{% endif %}

# Email Configuration (Optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Static Files
STATIC_URL=/static/
MEDIA_URL=/media/
